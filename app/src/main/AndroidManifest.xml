<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cisc181.danmaku">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".TitleScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".GameScreen"
            android:label="@string/title_activity_game_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Instructions"
            android:label="@string/title_activity_instructions"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HowToPlay"
            android:label="@string/title_activity_how_to_play"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".EnterName" />
        <activity android:name=".highScores"></activity>
        <activity android:name=".HighScores" />
    </application>

</manifest>